programa{
	
	funcao inicio(){
		escreva("Exibir números pares: \n")
		para (inteiro i = 1; i <= 100; i++){
			se (i % 2 == 0){
				escreva ("\n",i)
				
			}
		}

		escreva ("Exibir números impares: \n")
		para (inteiro i = 1; i <= 100; i++){
			se (i % 2 == 1){
				escreva ("\n", i)
			}
		}
	}
}
